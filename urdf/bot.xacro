<?xml version='1.0'?>

<robot name = "swatchtha_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name = "base_link">

        <visual>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <geometry>
                <mesh filename="package://final_package/meshes/base_link.stl" scale="0.001 0.001 0.001"/>       
            </geometry>
        </visual>

        <collision>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <geometry>
                <mesh filename="package://final_package/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "5.236"/>
            <origin xyz = "0 0 0.0751" rpy = "0 0 0"/>
            <inertia 
                ixx="0.07615"
                ixy="-0.02043"
                ixz="-0.03089"
                iyy="0.09361"
                iyz="0.3834"
                izz="0.1322"/>
        </inertial>
    </link>

    <xacro:macro name="wheel" params="is_front is_left num">
        <link name = "wheel_${num}">

            <visual>
                <origin xyz = "0 0 0" rpy = "0 0 0"/>
                <geometry>
                    <mesh filename="package://final_package/meshes/wheel.stl" scale= "0.001 0.001 0.001"/>   
                </geometry>
            </visual>

            <collision>
                <origin xyz = "0 0 0" rpy = "0 0 0"/>
                <geometry>
                    <mesh filename="package://final_package/meshes/wheel.stl" scale= "0.001 0.001 0.001"/>
                </geometry>
            </collision>

            <inertial>
                <mass value = "0.5024"/>
                <origin xyz = "0.0 -0.022 0.00" rpy = "0 0 0"/>
                <inertia 
                    ixx="0.0005714"
                    ixy="0"
                    ixz="0"
                    iyy="0.0009808"
                    iyz="0"
                    izz="0.0005714"/>
            </inertial>
        </link>

        <joint name='${num}_wheel' type="continuous">
            <parent link= "base_link"/>
            <child link= "wheel_${num}"/>
            <origin xyz = "${is_front} ${is_left} 0.002"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>

    <xacro:wheel is_front = "0.12" is_left = "-0.156"  num="1"/> 
    <!-- Right Front -->
    <xacro:wheel is_front = "-0.12" is_left = "-0.156" num="2"/> 
    <!-- Right Back -->
    <xacro:wheel is_front = "0.12" is_left = "0.2" num="3"/> 
    <!-- Left Front -->
    <xacro:wheel is_front = "-0.12" is_left = "0.2" num="4"/> 
    <!-- Left Back -->



    <xacro:macro name="transmission_tag" params="wheel_num">

        <transmission name="transmission_${wheel_num}">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${wheel_num}_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${wheel_num}_wheel">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <gazebo reference="wheel_${wheel_num}">
        <kp>1000000.0</kp> <!-- kp and kd for rubber -->
        <kd>100.0</kd>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <material>Gazebo/Black</material>
        </gazebo>

    </xacro:macro>

    <xacro:transmission_tag wheel_num="1"/>
    <xacro:transmission_tag wheel_num="2"/>
    <xacro:transmission_tag wheel_num="3"/>
    <xacro:transmission_tag wheel_num="4"/>

    <xacro:include filename="$(find final_package)/urdf/lidar.xacro"/>
    <xacro:include filename="$(find final_package)/urdf/camera.xacro"/>
    <xacro:include filename="$(find final_package)/urdf/manipulator.xacro"/>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/</robotNamespace>
        </plugin>
    </gazebo>

 </robot>